#!/bin/sh

STATUS_FILE=/var/run/status_file

echo "get cpu stats..."

MEMFREE=$(free |grep 'Mem:' |awk '{print $4}')

LOAD=$(uptime | awk -F'average:' '{gsub(/[ \t]+/,"",$2);print $2}')

TIMEB=$(grep btime /proc/stat | awk '{print $2}')
TIMENOW=$(date +"%s")

DIFF=$(expr $TIMENOW - $TIMEB)
DAYS=$(expr $DIFF / 86400)
DIFF=$(expr $DIFF \% 86400)
HOURS=$(expr $DIFF / 3600)
DIFF=$(expr $DIFF \% 3600)
MIN=$(expr $DIFF / 60)

UPTIME=`printf "%0dd:%0dh:%02dm" $DAYS $HOURS $MIN`
echo $UPTIME > /tmp/now

LAST_REBOOT=$(cat /etc/reboot_reasons |tail -1 |awk '{printf "%s", $1}')

echo -n "&memfree=${MEMFREE}&load=${LOAD}&uptime=${UPTIME}-${LAST_REBOOT}" >> $STATUS_FILE
#
